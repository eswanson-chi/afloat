<div class="page-header">
  <h1>
    Activity actions
    <a href="/activity_actions/new" class="btn btn-lg btn-success">New Activity action</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Activity</th>
        <th>Action</th>
        <th>Actions</th>
      </tr>

      <% @activity_actions.each do |activity_action| %>
      <tr>
        <td><%= activity_action.activity_id %></td>
        <td><%= activity_action.action_id %></td>
        <td>
          <a href="/activity_actions/<%= activity_action.id %>" class="btn btn-primary">Show</a>
          <a href="/activity_actions/<%= activity_action.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_activity_action/<%= activity_action.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
