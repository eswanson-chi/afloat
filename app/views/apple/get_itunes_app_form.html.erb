<div class="page-header">
  <h3>Add an iTunes App</h3>
</div>
<div class="row">
  <div class="col-md-12">
    <form action="/new_itunes_app" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for director_id -->
      <div class="form-group">
        <label for="app_type" class="control-label">
          App Type
        </label>

        <%= select_tag(:app_type, options_for_select([['iPhone', 'iPhone'], ['iPad', 'iPad']], 2), :class => "form-control") %>
      </div>

      <div class="form-group">

          <p><label for="app_term">App Name:</label></p>
          <input type="text" name="app_term" id="app_term">
        </div>
        <div><p></p></div>

        <p><div class="col-sm-10">
          <button class="btn btn-default">Lookup App</button>
        </div></p>
      </div>
    </form>
  </div>
</div>

