<!-- Validation failure messages -->
<% if @device.errors.any? %>
  <% @device.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Device #<%= @device.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_device/<%= @device.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for manufacturer_id -->
      <div class="form-group">
        <label for="manufacturer_id" class="control-label">
          Manufacturer
        </label>

        <input type="text" id="manufacturer_id" name="manufacturer_id" placeholder="Manufacturer" class="form-control" value="<%= @device.manufacturer_id %>">
      </div>

      <!-- Label and input for model_number -->
      <div class="form-group">
        <label for="model_number" class="control-label">
          Model number
        </label>

        <input type="text" id="model_number" name="model_number" placeholder="Model number" class="form-control" value="<%= @device.model_number %>">
      </div>

      <!-- Label and input for internal_name -->
      <div class="form-group">
        <label for="internal_name" class="control-label">
          Internal name
        </label>

        <input type="text" id="internal_name" name="internal_name" placeholder="Internal name" class="form-control" value="<%= @device.internal_name %>">
      </div>

      <!-- Label and input for identifier -->
      <div class="form-group">
        <label for="identifier" class="control-label">
          Identifier
        </label>

        <input type="text" id="identifier" name="identifier" placeholder="Identifier" class="form-control" value="<%= @device.identifier %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @device.name %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @device.image %>">
      </div>

      <button class="btn btn-warning">
        Update Device
      </button>
      or
      <a href="/devices/<%= @device.id %>">Cancel</a>
    </form>
  </div>
</div>
