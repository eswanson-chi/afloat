<div class="page-header">
  <h3>Activity Category #<%= @activity_category.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd><%= @activity_category.category_id %></dd>

      <dt>Activity</dt>
      <dd><%= @activity_category.activity_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/activity_categories" class="btn btn-primary">
        Back
      </a>
      <a href="/activity_categories/<%= @activity_category.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_activity_category/<%= @activity_category.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
