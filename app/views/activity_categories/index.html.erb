<div class="page-header">
  <h1>
    Activity categories
    <a href="/activity_categories/new" class="btn btn-lg btn-success">New Activity category</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Activity</th>
        <th>Actions</th>
      </tr>

      <% @activity_categories.each do |activity_category| %>
      <tr>
        <td><%= activity_category.category_id %></td>
        <td><%= activity_category.activity_id %></td>
        <td>
          <a href="/activity_categories/<%= activity_category.id %>" class="btn btn-primary">Show</a>
          <a href="/activity_categories/<%= activity_category.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_activity_category/<%= activity_category.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
