<div class="page-header">
  <h1>
    Activity Categories
    <a href="/activity_categories/new" class="btn btn-lg btn-success">New Activity category</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Activity</th>
        <th>Actions</th>
      </tr>

      <% @activity_categories.each do |activity_category| %>
      <tr>
        <td><%= activity_category.category.name %></td>
        <td><%= activity_category.activity.name %></td>
        <td>

          <a href="/activity_categories/<%= activity_category.id %>/edit" class="btn btn-warning">Edit</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
