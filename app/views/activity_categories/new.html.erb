<!-- Validation failure messages -->
<% if @activity_category.errors.any? %>
  <% @activity_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Activity Category</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_activity_category" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for category_id -->
      <div class="form-group">
        <label for="category_id" class="control-label">
          Category
        </label>

        <input type="text" id="user_latitude" name="user_latitude" placeholder="Category" class="form-control">
      </div>


    </form>
  </div>
</div>
