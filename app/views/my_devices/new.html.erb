<!-- Validation failure messages -->
<% if @my_device.errors.any? %>
  <% @my_device.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add My Device</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_my_device" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for device_id -->
      <div class="form-group">
        <label for="device_id" class="control-label">
          Device
        </label>

        <input type="text" id="device_id" name="device_id" placeholder="Device" class="form-control" value="<%= @my_device.device_id %>">
      </div>

      <!-- Label and input for opsystem_id -->
      <div class="form-group">
        <label for="opsystem_id" class="control-label">
          Opsystem
        </label>

        <input type="text" id="opsystem_id" name="opsystem_id" placeholder="Opsystem" class="form-control" value="<%= @my_device.opsystem_id %>">
      </div>

      <!-- Label and input for nickename -->
      <div class="form-group">
        <label for="nickename" class="control-label">
          Nickename
        </label>

        <input type="text" id="nickename" name="nickename" placeholder="Nickename" class="form-control" value="<%= @my_device.nickename %>">
      </div>

      <!-- Label and input for active -->
      <div class="checkbox">
        <label for="active">
          <input type="checkbox" id="active" name="active" value="1" <%= "checked" if @my_device.active %>>
          Active
        </label>
      </div>

      <button class="btn btn-success">
        Create My Device
      </button>
      or
      <a href="/my_devices">Cancel</a>
    </form>
  </div>
</div>
