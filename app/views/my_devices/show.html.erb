<div class="page-header">
  <h3>My Device #<%= @my_device.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Device</dt>
      <dd><%= @my_device.device.name %></dd>


      <dt>Opsystem</dt>
      <dd><%= @my_device.opsystem.version_name%></dd>

      <dt>Nickname</dt>
      <dd><%= @my_device.nickname %></dd>


      <dd><img src="/img/<%= @my_device.device.image %>" width=150></dd>

      <dt>Active</dt>
      <dd><%= @my_device.active %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/my_devices" class="btn btn-primary">
        Back
      </a>
      <a href="/my_devices/<%= @my_device.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_my_device/<%= @my_device.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
