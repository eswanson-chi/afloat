<div class="page-header">
  <h1>
    Apps
    <a href="/new_itunes_app_form" class="btn btn-lg btn-success">New App</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th width=100></th>
        <th>Name</th>
        <th width=200>Actions</th>
      </tr>

      <% @apps.each do |app| %>
      <tr>
        <td><img src="<%= app.image %>"  width=70></a></td>
        <td><h3><%= app.name %></h3></td>
        <td>
          <a href="/apps/<%= app.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_app/<%= app.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
