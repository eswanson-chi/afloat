<div class="page-header">
  <h1>
    Apps
    <a href="/apps/new" class="btn btn-lg btn-success">New App</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Itunes</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.itunes_id %></td>
        <td><%= app.image %></td>
        <td>
          <a href="/apps/<%= app.id %>" class="btn btn-primary">Show</a>
          <a href="/apps/<%= app.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_app/<%= app.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
