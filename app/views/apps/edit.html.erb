<!-- Validation failure messages -->
<% if @app.errors.any? %>
  <% @app.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit App #<%= @app.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_app/<%= @app.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @app.name %>">
      </div>

      <!-- Label and input for itunes_id -->
      <div class="form-group">
        <label for="itunes_id" class="control-label">
          Itunes
        </label>

        <input type="text" id="itunes_id" name="itunes_id" placeholder="Itunes" class="form-control" value="<%= @app.itunes_id %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @app.image %>">
      </div>

      <button class="btn btn-warning">
        Update App
      </button>
      or
      <a href="/apps/<%= @app.id %>">Cancel</a>
    </form>
  </div>
</div>
