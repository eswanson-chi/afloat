<div class="page-header">
  <h3>App #<%= @app.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @app.name %></dd>

      <dt>Itunes</dt>
      <dd><%= @app.itunes_id %></dd>

      <dt>Image</dt>
      <dd><%= @app.image %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/apps" class="btn btn-primary">
        Back
      </a>
      <a href="/apps/<%= @app.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_app/<%= @app.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
