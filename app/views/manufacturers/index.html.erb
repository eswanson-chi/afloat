<div class="page-header">
  <h1>
    Manufacturers
    <a href="/manufacturers/new" class="btn btn-lg btn-success">New Manufacturer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.name %></td>
        <td>
          <a href="/manufacturers/<%= manufacturer.id %>" class="btn btn-primary">Show</a>
          <a href="/manufacturers/<%= manufacturer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_manufacturer/<%= manufacturer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
