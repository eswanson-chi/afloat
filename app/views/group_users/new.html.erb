<!-- Validation failure messages -->
<% if @group_user.errors.any? %>
  <% @group_user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Group User</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_group_user" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      !-- Label and input for group_id -->
      <div class="form-group">
        <label for="group_id" class="control-label">
          Group
        </label>
        <%= select_tag :group_id, options_from_collection_for_select(Group.order("id DESC"), :id, :name, @group_user.group_id), :class => "form-control" %>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User Email
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @group_user.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Group User
      </button>
      or
      <a href="/group_users">Cancel</a>
    </form>
  </div>
</div>
