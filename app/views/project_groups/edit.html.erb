<!-- Validation failure messages -->
<% if @project_group.errors.any? %>
  <% @project_group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Project Group #<%= @project_group.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_project_group/<%= @project_group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for project_id -->
      <div class="form-group">
        <label for="project_id" class="control-label">
          Project
        </label>

        <input type="text" id="project_id" name="project_id" placeholder="Project" class="form-control" value="<%= @project_group.project_id %>">
      </div>

      <!-- Label and input for group_id -->
      <div class="form-group">
        <label for="group_id" class="control-label">
          Group
        </label>

        <input type="text" id="group_id" name="group_id" placeholder="Group" class="form-control" value="<%= @project_group.group_id %>">
      </div>

      <button class="btn btn-warning">
        Update Project Group
      </button>
      or
      <a href="/project_groups/<%= @project_group.id %>">Cancel</a>
    </form>
  </div>
</div>
