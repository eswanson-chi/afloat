<div class="page-header">
  <h1>
    Project groups
    <a href="/project_groups/new" class="btn btn-lg btn-success">New Project group</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Project</th>
        <th>Group</th>
        <th>Actions</th>
      </tr>

      <% @project_groups.each do |project_group| %>
      <tr>
        <td><%= project_group.project_id %></td>
        <td><%= project_group.group_id %></td>
        <td>
          <a href="/project_groups/<%= project_group.id %>" class="btn btn-primary">Show</a>
          <a href="/project_groups/<%= project_group.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project_group/<%= project_group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
